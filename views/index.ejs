<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NBA</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Preahvihear&display=swap" rel="stylesheet">
</head>
<body>
    <h1>NBA</h1>
    <form id="myForm" method="post">
        <input id="get" type="submit" value="Home" formaction="/">
        
        <label for="idInput">ID:</label>
        <input type="text" id="idInput" name="id">

        <label for="nameInput">NAME:</label>
        <input type="text" id="nameInput" name="name">
  
        <label for="submit">TYPE:</label>
        <input id="get" type="submit" value="Player" formaction="/get-player">
        <input id="get" type="submit" value="Team" formaction="/get-team">
        
    </form>

    <% if(imgPresent) { %>
       <img src="https://images.pexels.com/photos/358042/pexels-photo-358042.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="basketball arena">
    <% } %>

    <% if(locals.player) { %>
        <div class="player">
            <h2><%= player.first_name %> <%= player.last_name %></h2>
            <ul>
                <li>Player ID: <%= player.id %></li>                
                <li>Position: <%= player.position %></li>               
                <li>Height: <%= player.height_feet %>' <%= player.height_inches %></li>                                
                <li>Weight: <%= player.weight_pounds %>lbs</li>
            </ul>
        </div>
    <% } %>

    <% if(locals.players) { %>
        <div class="grid-container-players">
            <% (players.data).forEach(person => { %>
                <div class="player">
                    <h2><%= person.first_name %> <%= person.last_name %></h2>
                    <ul>
                        <li>Player ID: <%= person.id %></li>
                        <li>Position: <%= person.position %></li>
                        <li>Height: <%= person.height_feet %>' <%= person.height_inches %></li>       
                        <li>Weight: <%= person.weight_pounds %>lbs</li>                       
                        <li>Team: <%= person.team.full_name %></li>
                    </ul>
                </div>
            <% }); %>
        </div>
        <% if(nextPage){ %>   
            <form id="myForm" method="post"><input id="get" type="submit" value="NextPage" formaction="/get-page"></form>
        <% } %>
    <% } %>

    <% if(locals.team) { %>
        <div class="player">
            <h2><%= team.name %></h2>
            <ul>
                <li>ID: <%= team.id %></li>
                <li>Abbreviation: <%= team.abbreviation %></li>
                <li>City: <%= team.city %></li>
                <li>Conference: <%= team.conference %></li>
                <li>Division: <%= team.division %></li>
                <li>Full Name: <%= team.full_name %></li>
            </ul>
        </div>
    <% } %>

    <% if(locals.teams) { %>
        <div class="grid-container-teams">
            <% (teams.data).forEach(team => { %>
                <div class="team">
                    <h2><%= team.name %></h2>
                    <ul>
                        <li>ID: <%= team.id %></li>
                        <li>Abbreviation: <%= team.abbreviation %></li>
                        <li>City: <%= team.city %></li>
                        <li>Conference: <%= team.conference %></li>
                        <li>Division: <%= team.division %></li>
                        <li>Full Name: <%= team.full_name %></li>
                    </ul>
                </div>
            <% }); %>
        </div>
    <% } %>
    
    

</body>
</html>